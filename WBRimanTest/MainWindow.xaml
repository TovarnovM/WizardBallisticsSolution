<Window x:Class="SolverDrawTsts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolverDrawTsts"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="337.394" Width="467.903">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="408*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="47"/>
        </Grid.RowDefinitions>
        <oxy:PlotView x:Name="tstPV" Model="{Binding vm.PM}" Grid.Row="0" Grid.Column="2"/>
        <Button Content="Run" HorizontalAlignment="Left" Margin="10,0,0,1" Grid.Row="1" Width="75" Click="Button_Click" Height="20" VerticalAlignment="Bottom" Grid.ColumnSpan="3"/>
        <TextBox Name="tb1" HorizontalAlignment="Left" Margin="36,0,0,1" Grid.Row="1" TextWrapping="Wrap" Text="0.5" Width="120" Height="20" VerticalAlignment="Bottom" Grid.Column="2"/>
        <Slider Name="slider" Margin="0,5,0,0" Grid.Row="1" VerticalAlignment="Top" ValueChanged="slider_ValueChanged" Grid.ColumnSpan="3"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="217,0,0,0" Grid.Row="1" Width="75" Height="20" VerticalAlignment="Bottom" Click="Button_Click_1" Grid.Column="2"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="297,0,0,-1" Grid.Row="1" Width="75" Height="20" VerticalAlignment="Bottom" Click="Button_Click_2" Grid.Column="2" />
        <GridSplitter Grid.Column="1" Grid.Row="0"  Width="5"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <ListBox Name="lb"/>
    </Grid>
</Window>
